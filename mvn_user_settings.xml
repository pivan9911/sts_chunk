<settings xmlns="http://maven.apache.org/settings/1.0.0" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <localRepository>C:/UBS/Dev/Data/Maven/repo</localRepository>

  <pluginGroups>
    <!-- pluginGroup
     | Specifies a further group identifier to use for plugin lookup.
    <pluginGroup>com.your.plugins</pluginGroup>
    -->
  </pluginGroups>

  <proxies>
    <!-- proxy
     | Specification for one proxy, to be used in connecting to the network.
     |
    <proxy>
      <id>optional</id>
      <active>true</active>
      <protocol>http</protocol>
      <username>proxyuser</username>
      <password>proxypass</password>
      <host>proxy.host.net</host>
      <port>80</port>
      <nonProxyHosts>local.net|some.host.com</nonProxyHosts>
    </proxy>
    -->

	<!-- if need, then activate or configure here:
    <proxy>
      <active>true</active>
      <protocol>http</protocol>
      <port>8080</port>
      <host>zh-netchild.web.proxy.ubs.com</host>
    </proxy>
    -->
  </proxies>

  <servers/>

  <mirrors>
    <mirror>
      <id>UBSMavenRepository</id>
      <name>UBS Maven Repository (Nexus)</name>
      <url>http://maven-repository.ubs.net</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>
  
  <profiles>
    <profile>
      <id>ubsDefaultProfile</id>
      <properties>
      </properties>
      <repositories>
		<repository>
			<id>UBSMavenRepository</id>
			<name>UBS Maven Repository (Nexus)</name>
			<url>http://maven-repository.ubs.net</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
			<id>central-plugin-repository</id>
			<name>UBS Public Plugin Repository (Nexus)</name>
			<url>http://maven-repository.ubs.net</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>ubsDefaultProfile</activeProfile>
  </activeProfiles>

</settings>
